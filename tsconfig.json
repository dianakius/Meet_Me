{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}